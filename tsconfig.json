{
    "compilerOptions": {
        "outDir": "lib/",
        "target": "ES6",
        "sourceMap": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "strict": true,
        "esModuleInterop": true,
        "types": [ "node", "jest" ],
        "jsx": "react",
        "lib": ["ES2018", "DOM"]
    },
    "include": [
        "src",
        "types"
    ],
    "exclude": [
        "tests"
    ]
}